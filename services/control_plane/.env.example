# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_agent_platform
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# AWS (for local development, use localstack or leave empty)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=
S3_ARTIFACTS_BUCKET=ai-agent-platform-artifacts-dev
SQS_ORCHESTRATOR_QUEUE_URL=
STEP_FUNCTIONS_STATE_MACHINE_ARN=

# LLM Gateway
LLM_GATEWAY_URL=http://localhost:8001
LLM_GATEWAY_TIMEOUT=30

# Security
JWT_SECRET_KEY=dev-secret-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true